# Este archivo es una plantilla para configurar los secretos en Streamlit Cloud.
# 
# INSTRUCCIONES:
# 1. Ve a tu app en https://share.streamlit.io
# 2. Settings → Secrets
# 3. Copia el contenido de este archivo
# 4. Reemplaza los valores <...> con tus credenciales reales
# 5. Guarda los cambios
# =============================================================================

# =============================================================================
# BASE DE DATOS PRINCIPAL (Lectura/Escritura)
# =============================================================================
MONGO_URI = "mongodb+srv://<usuario>:<password>@<cluster>.mongodb.net/?appName=MiApp"
MONGO_DB = "BioflocDB"
MONGO_COLLECTION = "telemetria"
MONGO_DEVICES_COLLECTION = "devices"

# Ejemplo real (NO uses estos valores, son solo ilustrativos):
# MONGO_URI = "mongodb+srv://admin_user:MySecurePass123@cluster0.mongodb.net/?appName=BioflockApp"
# MONGO_DB = "SistemasLab"
# MONGO_COLLECTION = "telemetria"
# MONGO_DEVICES_COLLECTION = "devices"

# =============================================================================
# NOTAS IMPORTANTES PARA STREAMLIT CLOUD
# =============================================================================
# 1. NO incluyas comillas simples (') en los valores, usa comillas dobles (")
# 2. NO expongas este archivo en GitHub, úsalo solo en el panel de Streamlit Cloud
# 3. Asegúrate de permitir acceso desde cualquier IP en MongoDB Atlas (0.0.0.0/0)
#    o específicamente desde las IPs de Streamlit Cloud
# 4. Si experimentas problemas de conexión, verifica:
#    - Que las credenciales sean correctas
#    - Que el cluster esté activo (no pausado por inactividad)
#    - Que las colecciones existan en la base de datos

# =============================================================================
# AUTENTICACIÓN (OBLIGATORIO)
# =============================================================================
# El login es OBLIGATORIO para proteger datos sensibles
# Si no configuras APP_PASSWORD_HASH, la aplicación mostrará un error
APP_PASSWORD_HASH = "$2b$12$ejemplo_de_hash_bcrypt_reemplazar_con_hash_real"

# Para generar el hash, ejecuta localmente:
# python -m scripts.generate_password_hash "TuContraseñaSegura123"
